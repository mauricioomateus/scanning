#!/bin/bash

echo " *** In progress... *** "

gobuster dns -d $1 -w $2 -q > $3

echo " =====================================================================  "
echo " ==================== Ajustando arquivos ... =========================  "
echo " =====================================================================  "

cat $3 | grep "$1" | cut -d " " -f 2


echo " =====================================================================  "
echo " ===================== Convertendo em IP  ... =========================  "
echo " =====================================================================  "


nmap -v -sn -iL $3 -oG ip.txt

echo " =====================================================================  "
echo " =====================================================================  "

cat ip.txt | grep "Up" | cut -d " " -f 2 > ip_ativo.txt

rm ip.txt
rm $3

echo " =====================================================================  "
echo " =========================== Finalizado ==============================  "
echo " =====================================================================  "
